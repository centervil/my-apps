{
  "name": "spotify-automation",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ui-automations/spotify-automation/src",
  "projectType": "application",
  "targets": {
    "test": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/dist/.playwright/apps/ui-automations/spotify-automation/playwright-report-unit"],
      "options": {
        "config": "apps/ui-automations/spotify-automation/playwright.unit.config.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @my-apps/spotify-automation lint"
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/dist/.playwright/apps/ui-automations/spotify-automation/playwright-report"],
      "options": {
        "config": "apps/ui-automations/spotify-automation/playwright.config.ts"
      }
    }
  },
  "tags": ["scope:ui-automation", "type:app"]
}
