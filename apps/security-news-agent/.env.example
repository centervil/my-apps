# LangSmith Configuration
# Set to "true" to enable tracing with LangSmith
LANGCHAIN_TRACING_V2="true"
# Your LangSmith API key
LANGCHAIN_API_KEY="your-langsmith-api-key"
# The project name for LangSmith
LANGCHAIN_PROJECT="security-news-agent"
# The LangSmith API endpoint
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"

# Google Gemini Configuration
# Your Google API Key for Gemini
GOOGLE_API_KEY="your-google-api-key"
# The name of the Gemini model to use (e.g., "gemini-1.5-flash-latest")
GEMINI_MODEL_NAME="gemini-1.5-flash-latest"

# Tavily API Configuration
# Your Tavily Search API key
TAVILY_API_KEY="your-tavily-api-key"

# Marp Configuration
# The output format for the slides (pdf, png, or html). Leave empty for .md only.
SLIDE_FORMAT="pdf"
# The theme for the Marp slides (e.g., default, gaia, uncover)
MARP_THEME="default"
# Whether to paginate the slides ("true" or "false")
MARP_PAGINATE="true"
